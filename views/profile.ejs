    <!-- MAIN WEBSITE CONTAINER -->
    <div class="container">
	<h1 class="h1margin">Your Profile, <%=name%></h1>
<br>
	
        <table class="table">
            <% for(var i=0; i < users.length; i++) { %>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
      <th scope="col">City</th>
      <th scope="col">Postcode</th>
      <th scope="col">Ailments</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= users[i].name %></td>
      <td><%= users[i].email %></td>
      <td><%= users[i].address %></td>
      <td><%= users[i].city %></td>
      <td><%= users[i].postcode %></td>
      <td><%= users[i].ailments %></td>
    </tr>
  </tbody>
</table>
<% } %>
